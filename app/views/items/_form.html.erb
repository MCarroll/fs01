<%= form_with(model: item) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :short_name %>
    <%= form.text_field :short_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :sku %>
    <%= form.text_field :sku, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :weight_lbs %>
    <%= form.text_field :weight_lbs, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :width %>
    <%= form.text_field :width, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :height %>
    <%= form.text_field :height, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :bulk %>
    <%= form.text_field :bulk, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :bulk_description %>
    <%= form.text_field :bulk_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :bulk_qty %>
    <%= form.text_field :bulk_qty, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :item_id %>
    <%= form.text_field :item_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :account_id %>
    <%= form.text_field :account_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
